{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "out",
    "types": [
      "node",
      "@wdio/types"
    ],
    "noImplicitThis": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}